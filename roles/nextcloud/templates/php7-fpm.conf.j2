[global]
error_log = syslog
daemonize = no

[{{ nextcloud_user }}]
listen = {{ nextcloud_socket }}
listen.owner = {{ nextcloud_user }}
listen.group = http
listen.mode = 0660

pm = dynamic
pm.max_children = 100
pm.start_servers = 20
pm.min_spare_servers = 5
pm.max_spare_servers = 30
pm.max_requests = 2000
